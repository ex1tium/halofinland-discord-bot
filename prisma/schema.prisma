generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BotUser {
  userId        Int     @id @default(autoincrement()) @map("userId")
  discordUserId String  @unique
  gamerTag  String?
  name      String?

  @@map("user")
}

model Tweets {
  newest_id       String @unique
  oldest_id       String
  ratelimit_reset Int

  @@map("tweets")
}

model Tweet {
  id         String   @id
  text       String
  created_at DateTime
  author_id  String

  @@map("tweet")
}
